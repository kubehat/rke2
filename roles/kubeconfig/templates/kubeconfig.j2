apiVersion: v1
kind: Config
clusters:
- name: {{ cluster_name }}-{{ target_env }}
  cluster:
    server: https://{{ cluster_domain }}:6443
    certificate-authority-data: {{ extracted_data.ca_data }}
contexts:
- name: {{ cluster_name }}-{{ target_env }}
  context:
    cluster: {{ cluster_name }}-{{ target_env }}
    user: {{ cluster_name }}-{{ target_env }}
    namespace: kube-system
current-context: {{ cluster_name }}-{{ target_env }}
preferences: {}
users:
- name: {{ cluster_name }}-{{ target_env }}
  user:
    client-certificate-data: {{ extracted_data.cert_data }}
    client-key-data: {{ extracted_data.key_data }}
